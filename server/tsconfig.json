{
  "compilerOptions": {
    "rootDir": "./src",
    "module": "nodenext",
    "moduleResolution": "nodenext", // âœ… Important for ESM imports to work correctly
    "target": "esnext",

    "types": ["node","cors"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}
